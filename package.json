{
  "name": "mern-crud-api",
  "version": "1.0.0",
  "description": "MERN Stack CRUD API with Authentication - Learning Project",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "client": "cd client && npm start",
    "server": "nodemon src/server.js",
    "client-install": "cd client && npm install",
    "install-all": "npm install && npm run client-install",
    "dev-all": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "mern",
    "mongodb",
    "express",
    "react",
    "nodejs",
    "authentication",
    "crud",
    "api"
  ],
  "author": "Learning Project",
  "license": "MIT"
}
